<!--userのナビゲーションバー-->

<!-- ナビバーを上部に固定 -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top shadow">

<!-- ロゴからトップ画面へ遷移 -->
  <div class="navbar-brand">
    <%= link_to root_path do %>
      <%= image_tag "logo.jpg", size: "95x45" %>
    <% end %>
  </div>

<!-- タブレットサイズぐらいからメニューバーへボタンを格納（レプポンシブ対応） -->
  <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#Navber" aria-controls="Navber" aria-expanded="false" aria-label="レスポンシブ・ナビゲーションバー">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="Navber">
    <form class="form-inline ml-auto">

      <!-- jquery(今回はraty)が動かないので苦肉の策でturbolinksを切っている -->
      <%= link_to tests_path, data: {"turbolinks" => false} do %>
        <i class="fa fa-file" aria-hidden="true">
          <span class="underline">
            診断
          </span>
        </i>
      <% end %>

<!-- ログイン時 -->
      <% if user_signed_in? %>
        <%= link_to user_path(current_user) do %>
          <i class="fa fa-home" aria-hidden="true">
            <span class="underline">
              マイページ
            </span>
          </i>
        <% end %>
        <%= link_to new_inquiries_path do %>
          <i class="fa fa-envelope" aria-hidden="true">
            <span class="underline">
              お問い合わせ
            </span>
          </i>
        <% end %>
        <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fa fa-share" aria-hidden="true">
            <span class="underline">
              ログアウト
            </span>
          </i>
        <% end %>

<!-- ログアウト時 -->
      <% else %>
        <%= link_to new_user_registration_path do %>
          <i class="fa fa fa-flag" aria-hidden="true">
            <span class="underline">
              新規登録
            </span>
          </i>
        <% end %>
        <%= link_to new_user_session_path do %>
          <i class="fa fa-reply" aria-hidden="true">
            <span class="underline">
              ログイン
            </span>
          </i>
        <% end %>
      <% end %>
    </form>
  </div>
</nav>