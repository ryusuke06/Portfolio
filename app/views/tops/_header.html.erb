<!--userのナビゲーションバー-->

<!-- ナビバーを上部に固定 -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">

<!-- ロゴからトップ画面へ遷移 -->
  <div class="navbar-brand">
    <%= link_to root_path do %>
      <%= image_tag 'no-image-mini.jpg' %>
    <% end %>
  </div>

<!-- タブレットサイズぐらいからメニューバーへボタンを格納（レプポンシブ対応） -->
  <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#Navber" aria-controls="Navber" aria-expanded="false" aria-label="レスポンシブ・ナビゲーションバー">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="Navber">
    <form class="form-inline ml-auto">

      <!-- jquery(今回はraty)が動かないので苦肉の策でturbolinksを切っている -->
      <%= link_to tests_path, data: {"turbolinks" => false} do %>
        <span class="underline">
          診断
        </span>
      <% end %>

<!-- ログイン時 -->
      <% if user_signed_in? %>
        <%= link_to user_path(current_user) do %>
          <span class="underline">
            マイページ
          </span>
        <% end %>
        <%= link_to new_inquiries_path do %>
          <span class="underline">
            お問い合わせ
          </span>
        <% end %>
        <%= link_to destroy_user_session_path, method: :delete do %>
          <span class="underline">
            ログアウト
          </span>
        <% end %>

<!-- ログアウト時 -->
      <% else %>
        <%= link_to new_user_registration_path do %>
          <span class="underline">
            新規登録
          </span>
        <% end %>
        <%= link_to new_user_session_path do %>
          <span class="underline">
            ログイン
          </span>
        <% end %>
      <% end %>
    </form>
  </div>
</nav>