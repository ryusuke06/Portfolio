<% if test.favorited_by?(current_user) %>
<!-- remote:trueでcontrollerからjs.erbを動かす -->
  <%= link_to test_favorites_path(test), method: :delete, remote: true do %>
    <i class="fa fa-heart heart" aria-hidden="true"></i>
  <% end %>

<% else %>

  <%= link_to test_favorites_path(test), method: :post, remote: true do %>
    <i class="fa fa-heart heart-o" aria-hidden="true"></i>
  <% end %>

<% end %>