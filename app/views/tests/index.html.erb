<%= render "tops/header" %>
<div class="index">
  <h3>診断一覧</h3>
</div>
<div align="right">
  <%= link_to new_admins_tests_path do %>
    <i class="glyphicon glyphicon-plus-sign" aria-hidden="true"></i>
  <% end %>
</div>

<div class="row">
  <table class="table table-bordered center">
    <thead>
      <th>診断ID</th>
      <th>診断名</th>
      <th>ジャンル</th>
      <th>平均評価</th>
      <th>公開ステータス</th>
    </thead>
    <% @tests.each do |test| %>
      <tr>
        <td>
          <%= test.id %>
        </td>
        <td>
          <%= link_to admins_test_path do %>
            <%= attechment_image_tag test, :image_id,format: 'jpeg', fallback: "no_image.jpg", size: "200x200" %>
          <% end %>
        </td>
        <td>
          <%= test.title %>
          <%= truncate(test.caption, length: 10) do %>
            <%= link_to "続きを読む", admins_test_path %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
