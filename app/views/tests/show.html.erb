<div class="container">
  <%= render "tops/header" %>
  <h1><%= @test.title %></h1>
  <div class="row">
    <div class="col-xs-4">
      <%=  attachment_image_tag @test, :image_id, size: "280x190",format: 'jpeg',fallback: "no_image.jpg"  %>
    </div>
    <div class="col-xs-8">
	  <table>
  	    <tbody>
		  <tr>
		    <td>
		  	  <p style="font-size: 18px"><strong><%= @test.title %></strong></p>
			</td>
		  </tr>
	  	  <tr>
			<td>
			  <p style="font-size: 10px"><%= @test.caption %></p>
			</td>
	      </tr>
		  <tr>
			<td id="favorite_button_<%= @test.id %>">
			  <%= render 'favorites/favorite', test: @test %>
			</td>
		  </tr>
		</tbody>
	  </table>
	</div>
  </div>
  <div class="row">
    <%= render "assessments/test_review", test: @test, assessment: @assessment %>
  </div>
</div>