<!-- ransackの検索フォーム -->

<%= search_form_for @search, url: search_items_path ,html: { method: :post } do |f| %>

  <%= f.label :name_cont, "診断名を含む" %>
  <%= f.search_field :name_cont %>

  <% f.select( :sorts, { '並び替え': 'id desc', '閲覧数の多い順': 'impression_count desc', '投稿の古い順': 'updated_at asc', '投稿の新しい順': 'updated_at desc', 'いいね!の多い順': 'likes_count desc' } , { selected: params[:q][:sorts] }, { onchange: 'this.form.submit()'} ) %>

  <% f.submit '完了' %>

<% end %>