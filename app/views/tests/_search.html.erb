<!-- ransackの検索フォーム -->

<div class="card rounded shadow"  style="width: 12rem;">
  <div class="card-header text-center">
    <h3 class="mb-0">条件で絞る</h3>
  </div>

  <div class="card-body px-2 py-3">
    <%= search_form_for search do |f| %>

      <%= f.label :title_cont, "キーワード", class: "form-group" %>
      <%= f.search_field :title_cont %>

      <%= f.label :sorts, "並び替え", class: "form-group" %>
      <%= f.select( :sorts, { '並び替え': 'id desc', '投稿の古い順': 'updated_at asc', '投稿の新しい順': 'updated_at desc' } , { selected: params[:q][:sorts] }, { onchange: 'this.form.submit()'} ) %>

      <!-- セレクトボックスでジャンル検索 -->
      <%= f.label :category_id_eq, "ジャンル検索", class: "form-group" %>
      <%= f.collection_select :category_id_eq, @categories, :id, :name, include_blank: "指定なし" %>
  </div>
      <%= f.submit '完了', class: "btn btn-success mb-0" %>

    <% end %>
</div>