<div class="container">
  <%= render "admins/tops/header" %>
    <h3 class="admins_index">ユーザー情報</h3>
  <div class="row">
  	<%= form_with model: @user, url: admins_user_path(@user), method: :patch, local: true do |f| %>
    <div class="col-xs-4">
      <%=  attachment_image_tag @user, :profile_image, size: "280x190",format: "jpeg",fallback: "no_image.jpg" %>
      <%= f.attachment_field :profile_image, class: "image btn-lg" %>
    </div>
    <div class="col-xs-8">
	  <table>
  	    <tbody>
		  <tr>
		    <td>
		  	  <%= @user.name %>
			</td>
		  </tr>
		  <tr>
			<td>会員ステータス</td>
		  </tr>
		  <tr>
			<td>
			  <%= f.label :account, "有効" %>
			  <%= f.radio_button :account, value: true %>
			</td>
			<td>
			  <%= f.label :account, "退会" %>
			  <%= f.radio_button :account, value: false %>
		    </td>
	      </tr>
		  <tr>
		  	<td>
              <%= f.submit "保存" %>
		  	</td>
		  </tr>
		</tbody>
	  </table>
	</div>
	<% end %>
  </div>
</div>