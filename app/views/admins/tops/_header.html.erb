<!--adminのナビゲーションバー-->

<!-- ナビバーを上部に固定 -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">

<!-- ロゴからトップ画面へ遷移 -->
  <div class="navbar-brand">
    <%= link_to admins_root_path do %>
      <%= image_tag 'no-image-mini.jpg' %>
    <% end %>
  </div>

<!-- タブレットサイズぐらいからメニューバーへボタンを格納（レプポンシブ対応） -->
  <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#Navber" aria-controls="Navber" aria-expanded="false" aria-label="レスポンシブ・ナビゲーションバー">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="Navber">
    <form class="form-inline ml-auto">

<!-- ログイン時 -->
      <% if admin_signed_in? %>
        <%= link_to admins_categories_path do %>
          <button type="button" class="btn btn-outline-default">
            ジャンル
          </button>
        <% end %>
        <%= link_to admins_inquiries_path do %>
          <button type="button" class="btn btn-outline-default">
            お問い合わせ
          </button>
        <% end %>
        <%= link_to admins_users_path do %>
          <button type="button" class="btn btn-outline-default">
            会員
          </button>
        <% end %>
        <%= link_to admins_tests_path, data: {"turbolinks" => false}  do %>
          <button type="button" class="btn btn-outline-default">
            診断
          </button>
        <% end %>
        <%= link_to destroy_admin_session_path, method: :delete do %>
          <button type="button" class="btn btn-outline-default">
            ログアウト
          </button>
        <% end %>

<!-- ログアウト時 -->
      <% else %>
        <%= link_to new_admin_session_path do %>
          <button type="button" class="btn btn-outline-default">
            ログイン
          </button>
        <% end %>
      <% end %>
    </form>
  </div>
</nav>