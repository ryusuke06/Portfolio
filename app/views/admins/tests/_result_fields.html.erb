<div class="nested-fields well well-compact">

  <div class="form-group">
    <%= f.label :title, "結果" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :caption, "結果説明文" %>
    <%= f.text_area :caption, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :youtube_url, "youtubeURL" %>
    <%= f.url_field :youtube_url, class: "form-control" %>
  </div>
  <div class="form-group">
  <%= f.label :pattern, "どの解答順がこの結果に繋がりますか？" %>

    <!--　newページからcreateアクションで@detailsを保存したのちに解答順が何パターンあるか計算してチェックボックスで表示 -->
  <% if @patterns.present? %>
    <% @patterns.each do |pattern| %>

        <!-- 末にnilを書いておかないとparams[:pattern]の配列に0が紛れ込むので注意 -->
      <%= f.check_box :patterns, {multiple: true}, "#{pattern}", nil %>
          <%= pattern %>
      <% end %>
    <% end %>
  </div>

    <i class="fa fa-minus-square" aria-hidden="true">
      <%= link_to_remove_association "削除", f %>
    </i>
</div>