<div class="nested-fields well well-compact">

  <div class="form-group">
      <%= f.label :question, "質問" %>
      <%= f.text_area :question, class: "form-control" %>
  </div>
  <div class="form-group">

      <%= f.label :first_answer, "選択肢１" %>
      <%= f.text_field :first_answer, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :second_answer, "選択肢２" %>
    <%= f.text_field :second_answer, class: "form-control" %>
  </div>

  <i class="fa fa-minus-square" aria-hidden="true">
    <%= link_to_remove_association "削除", f %>
  </i>

</div>