<div class="container">
  <%= render "tops/header" %>
    <h3 class="admins_index">ユーザー情報</h3>
  <div class="row">
  	<%= form_with model: @user, url: user_path(@user), method: :patch, local: true do |f| %>
    <div class="col-xs-4">
      <%=  attachment_image_tag @user, :profile_image, size: "280x190",format: "jpeg",fallback: "no_image.jpg" %>
      <%= f.attachment_field :profile_image, class: "image btn-lg" %>
    </div>
    <div class="col-xs-8">
	  <table>
  	    <tbody>
		  <tr>
		    <td>
		  	  <%= f.label :name, "ニックネーム" %>
		  	  <%= f.text_field :name %>
			</td>
		  </tr>
		  <tr>
		  	<td>
		  	  <%= f.label :email, "メールアドレス" %>
		  	  <%= f.email_field :email %>
		  <tr>
		  	<td>
              <%= f.submit "保存" %>
		  	</td>
		  </tr>
		  <tr>
		    <td>
		      <p>パスワード変更は<%= link_to "こちら", edit_user_registration_path %></p>
		    </td>
		  </tr>
		</tbody>
	  </table>
	</div>
	<% end %>
  </div>

  <h3>退会</h3>
  <div class="row">
  	<%= form_with model: @user, url: user_path(@user), method: :patch, local: true do |f| %>
    <div class="col-xs-8">
	  <table>
  	    <tbody>
		  <tr>
		    <td>
		  	  <%=  %>
			</td>
		  </tr>
		  <tr>
			<td>
			  <p>改善点を教えていただけると泣いて喜びます</p>
			  <p>お問い合わせは<%= link_to "こちら", new_inquiries_path %></p>
			</td>
		  </tr>
		  <tr>
			<td>
			  <%= f.label :account, "退会" %>
			  <%= f.radio_button :account, "disable" %>
		    </td>
	      </tr>
		  <tr>
		  	<td>
              <%= f.submit "保存" %>
		  	</td>
		  </tr>
		</tbody>
	  </table>
	</div>
	<% end %>
  </div>
</div>